# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration (REQUIRED - generate with: openssl rand -base64 32)
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Database
DB_PATH=./db/duckflix_lite.db

# Admin User (REQUIRED - set a strong password)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# External Services
TMDB_API_KEY=your-tmdb-api-key
ZURG_BASE_URL=http://localhost:8080
ZURG_MOUNT_PATH=/mnt/zurg
ZURG_ENABLED=true
PROWLARR_BASE_URL=http://localhost:9696
PROWLARR_API_KEY=your-prowlarr-api-key

# Server Configuration for Streaming
SERVER_HOST=lite.duckflix.tv
SERVER_PROTOCOL=https

# EPG/M3U Sources
EPG_SOURCE_URL=http://example.com/epg.xml
M3U_SOURCE_URL=http://example.com/playlist.m3u

# APK Hosting
APK_DIRECTORY=./static/apk

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# DaddyLive Integration (via StepDaddyLiveHD)
DADDYLIVE_ENABLED=true
DADDYLIVE_URL=http://localhost:9191
DADDYLIVE_COUNTRY_FILTER=US

# IP Session Tracking
VOD_SESSION_TIMEOUT_MS=120000
VOD_HEARTBEAT_INTERVAL_MS=30000
